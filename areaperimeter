//Area and Perimeter of Square and Rectangle
#include<stdio.h>
int main()
{
    int a,l,b;
    scanf("%d%d%d",&a,&l,&b);
    int areasq=a*a;
    int arearec=l*b;
    int perisq=4*a;
    int perirec=2*(l+b);
    printf("area of square is %d \n",areasq);
    printf("area of rectangle is %d \n",arearec);
    printf("perimeter of square is %d \n",perisq);
    printf("perimeter of rectangle is %d \n",perirec);
    return 0;
}
